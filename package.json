{
  "name": "stock-portfolio-app",
  "version": "1.0.0",
  "description": "Stock Portfolio Management App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "client": "npm start --prefix frontend",
    "build-frontend": "cd frontend && npm install && npm run build",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  },
  "engines": {
    "node": "18.x"
  }
}